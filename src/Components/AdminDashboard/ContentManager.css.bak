.content-manager {
  padding: 2rem;
  background: rgba(7,10,24,0.75);
  border-radius: 16px;
  margin: 1rem 0;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(96,165,250,0.06);
  box-shadow: 0 8px 32px rgba(6,12,26,0.28);
}

.section-number {
  display: inline-block;
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
  padding: 0.3rem 0.8rem;
  border-radius: 8px;
  margin-right: 0.8rem;
  font-size: 0.9em;
  font-weight: 600;
}

.form-section {
  background: rgba(7,10,24,0.4);
  border-radius: 12px;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  border: 1px solid rgba(96,165,250,0.08);
  transition: all 0.3s ease;
}

.form-section:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(6,12,26,0.15);
}

.form-title {
  color: var(--accent);
  margin: 0 0 1.2rem 0;
  font-size: 1.1rem;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.manager-header {
  text-align: center;
  margin-bottom: 2.5rem;
}

.manager-header h2 {
  color: var(--accent);
  margin: 0 0 0.5rem 0;
  font-size: 2rem;
  font-weight: 700;
  text-shadow: 0 2px 8px rgba(6,12,26,0.2);
}

.manager-header p {
  color: var(--muted-text);
  margin: 0;
}

.manager-controls {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.year-selector h3,
.content-type-selector h3 {
  color: var(--accent);
  margin: 0 0 1rem 0;
  font-size: 1.2rem;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.year-buttons,
.type-buttons {
  display: flex;
  gap: 0.8rem;
  flex-wrap: wrap;
}

.year-btn,
.type-btn {
  background: transparent;
  color: var(--accent);
  border: 2px solid rgba(96,165,250,0.08);
  padding: 0.8rem 1.2rem;
  border-radius: 12px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.year-btn:hover,
.type-btn:hover {
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
  transform: translateY(-3px);
}

.year-btn.active,
.type-btn.active {
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
  box-shadow: 0 6px 20px rgba(59,130,246,0.08);
}

.manager-content {
  display: grid;
  grid-template-columns: 1fr 1.2fr;
  gap: 2rem;
}

.manager-form,
.manager-list {
  background: rgba(7,10,24,0.5);
  border-radius: 12px;
  padding: 2rem;
  border: 1px solid rgba(96,165,250,0.06);
}

.content-form h3, .content-list h3 {
  color: var(--accent);
  margin: 0 0 1.5rem 0;
  font-size: 1.4rem;
  font-weight: 600;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  margin-bottom: 1.5rem;
}

.input-group {
  display: flex;
  flex-direction: column;
}

.input-group label {
  color: var(--accent);
  font-weight: 600;
  margin-bottom: 0.5rem;
  font-size: 0.9rem;
}

.input-group input,
.input-group select,
.input-group textarea {
  background: rgba(7,10,24,0.4);
  border: 1.5px solid rgba(96,165,250,0.08);
  border-radius: 12px;
  padding: 12px 16px;
  color: var(--text);
  font-size: 1rem;
  transition: all 0.3s ease;
}

.input-group input:focus,
.input-group select:focus,
.input-group textarea:focus {
  outline: none;
  border-color: var(--accent);
  background: rgba(96,165,250,0.06);
  box-shadow: 0 0 15px rgba(59,130,246,0.06);
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 1.5rem;
}

.btn-submit, .btn-reset {
  border: none;
  padding: 1rem 1.5rem;
  border-radius: 12px;
  cursor: pointer;
  font-weight: 700;
  transition: all 0.3s ease;
}

.btn-submit {
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
  flex: 1;
}

.btn-submit:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(59,130,246,0.08);
}

.btn-reset {
  background: transparent;
  color: var(--accent-600);
  border: 2px solid rgba(96,165,250,0.12);
}

.btn-reset:hover {
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
}

.empty-state {
  text-align: center;
  padding: 2rem;
  color: var(--muted-text);
}

.content-grid {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  max-height: 600px;
  overflow-y: auto;
  padding-right: 10px;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.manager-header h2,
.year-selector,
.content-type-selector,
.form-section,
.content-item {
  animation: fadeIn 0.5s ease forwards;
}

/* Interactive hover states */
.form-section {
  transition: all 0.3s ease;
}

.form-section:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(6,12,26,0.15);
}

/* Section number transitions */
.form-title:hover .section-number {
  transform: translateX(3px);
  background: linear-gradient(90deg, var(--primary), var(--accent));
}

.content-item {
  background: rgba(7,10,24,0.45);
  border: 1px solid rgba(96,165,250,0.06);
  border-radius: 12px;
  padding: 1.2rem;
  transition: all 0.3s ease;
}

.content-item:hover {
  background: rgba(7,10,24,0.6);
  transform: translateY(-2px);
}

.content-header h4 {
  color: var(--accent);
  margin: 0;
  font-size: 1.1rem;
}

.btn-delete {
  background: transparent;
  color: var(--accent-600);
  border: 1px solid rgba(96,165,250,0.12);
  border-radius: 8px;
  padding: 0.3rem 0.6rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-delete:hover {
  background: linear-gradient(90deg, var(--accent), var(--primary));
  color: var(--text);
}

.content-subject {
  color: var(--text);
  font-weight: 600;
}

.content-semester, .content-detail, .video-details span, .content-description, .content-date {
  color: var(--muted-text);
  font-size: 0.9rem;
}

.video-link {
  color: var(--accent-600);
  text-decoration: none;
  font-weight: 600;
}

.video-link:hover { text-decoration: underline; }
